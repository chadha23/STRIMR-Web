<?php
class User {
    private $id;
    private $username;
    private $email;
    private $password_hash;
    private $created_at;
    private $avatar_url;
    private $biography;

    public function __construct($id, $username, $email, $password_hash, $created_at, $avatar_url = null, $biography = null) {
        $this->id = $id;
        $this->username = $username;
        $this->email = $email;
        $this->password_hash = $password_hash;
        $this->created_at = $created_at;
        $this->avatar_url = $avatar_url;
        $this->biography = $biography;
    }

    public function getid() { return $this->id; }
    public function getusername() { return $this->username; }
    public function getEmail() { return $this->email; }
    public function getPasswordHash() { return $this->password_hash; }
    public function getCreatedAt() { return $this->created_at; }
    public function getAvatarUrl() { return $this->avatar_url; }
    public function getBiography() { return $this->biography; }

    public function setusername($username) { $this->username = $username; }
    public function setEmail($email) { $this->email = $email; }
    public function setPasswordHash($password_hash) { $this->password_hash = $password_hash; }
    public function setAvatarUrl($avatar_url) { $this->avatar_url = $avatar_url; }
    public function setBiography($biography) { $this->biography = $biography; }
}
?>